<ivysettings>
    <settings defaultResolver="default"/>
    <property name="m2-pattern"
              value="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision](-[classifier])"
              override="false"/>
    <resolvers>
        <chain name="default">
            <filesystem name="local-maven2" m2compatible="true" checkmodified="true">
                <artifact pattern="${m2-pattern}.[ext]"/>
                <ivy pattern="${m2-pattern}.pom"/>
            </filesystem>
            <ibiblio name="central" m2compatible="true"/>
            <ibiblio name="jcenter" m2compatible="true" root="http://jcenter.bintray.com"/>
            <ibiblio name="confluent" m2compatible="true" root="http://packages.confluent.io/maven/"/>
            <ibiblio name="openscada" m2compatible="true" root="http://neutronium.openscada.org/maven/"
                     checkmodified="true" changingPattern="*-SNAPSHOT"/>
            <ibiblio name="jitpack" m2compatible="true" root="https://jitpack.io"/>
        </chain>
    </resolvers>
</ivysettings>
