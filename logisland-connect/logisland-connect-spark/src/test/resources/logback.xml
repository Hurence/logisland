<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{yy/MM/dd HH:mm:ss} %p %c{1}: %m%n</pattern>
        </encoder>
    </appender>
    <logger name="parquet.hadoop" level="WARN"/>
    <logger name="org.apache.hadoop.hive.metastore.RetryingHMSHandler" level="FATAL"/>
    <logger name="com.hurence" level="DEBUG"/>
    <logger name="org.apache.hadoop.ipc.Client" level="WARN"/>
    <logger name="org.apache.spark" level="WARN"/>
    <logger name="kafka" level="WARN"/>
    <logger name="org.elasticsearch" level="WARN"/>
    <logger name="org.spark-project.jetty" level="WARN"/>
    <logger name="org.apache.zookeeper" level="ERROR"/>
    <logger name="org.spark_project.jetty" level="WARN"/>
    <logger name="org.apache.spark.streaming" level="WARN"/>
    <logger name="org.spark_project.jetty.util.component.AbstractLifeCycle" level="ERROR"/>
    <logger name="org.apache.spark.scheduler" level="WARN"/>
    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="org.I0Itec.zkclient" level="ERROR"/>
    <logger name="org.apache.spark.deploy.yarn" level="DEBUG"/>
    <logger name="org.apache.hadoop" level="WARN"/>
    <logger name="org.apache.spark.history" level="WARN"/>
    <logger name="org.apache.parquet" level="ERROR"/>
    <logger name="org.apache.hadoop.ipc.ProtobufRpcEngine" level="WARN"/>
    <logger name="parquet" level="ERROR"/>
    <logger name="org.eclipse.jetty.server" level="OFF"/>
    <logger name="org.apache.spark.repl.SparkIMain$exprTyper" level="INFO"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.apache.spark.repl.SparkILoop$SparkILoopInterpreter" level="INFO"/>
    <logger name="org.apache.spark.repl.Main" level="WARN"/>
    <logger name="org.apache.hadoop.hive.ql.exec.FunctionRegistry" level="ERROR"/>
    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>